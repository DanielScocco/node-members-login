  body
    #page-wrapper
      .container-fluid
        // Page Heading
        .row
          .col-lg-12
            div(align='center')
              h1.page-header
                img(src='./public/images/logo.png', height='100', width='570')
        // /.row
      // /.container-fluid
      div(align='center')
        br
        .row
          .col-md-12
            form(role='form')
              label Member Login
              br
              input(type='email', placeholder='Email')
              br
              input(type='password', placeholder='Password')
              br
              br
              button.btn.btn-success(type='submit') Submit
        br
        br
        .row
          .col-md-12
            form(role='form')
              label New Member Signup
              br
              input(type='text', placeholder='Referring Member')
              br
              input(type='email', placeholder='Email')
              br
              input(type='password', placeholder='Password')
              br
              br
              button.btn.btn-success(type='submit') Submit
    // /#page-wrapper
    // jQuery
    script(src='js/jquery.js')
